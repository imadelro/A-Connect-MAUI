<ContentPage
    x:Class="A_Connect.Views.MarketplaceNewsFeedPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:models="clr-namespace:A_Connect.Models"
    Title="Marketplace"
    BackgroundColor="White">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Fixed Filters -->
            <RowDefinition Height="*"/>
            <!-- Scrollable Listings -->
            <RowDefinition Height="Auto"/>
            <!-- Post Button -->
            <RowDefinition Height="Auto"/>
            <!-- Bottom Nav -->
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid BackgroundColor="{StaticResource DarkBlue}" Padding="20,40,20,20">
            <Label Text="Marketplace"
                   TextColor="{StaticResource Yellow}"
                   FontSize="24"
                   FontFamily="Inter-Black"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- Fixed Filter Section (Row 1) -->
        <StackLayout Grid.Row="1" Spacing="10" Padding="20,10">
            <!-- Search Bar -->
            <Frame CornerRadius="25" BackgroundColor="White" Padding="0">
                <HorizontalStackLayout Padding="10,0">
                    <Image Source="search_icon.png"
                           HeightRequest="20"
                           WidthRequest="20"
                           VerticalOptions="Center"
                           Margin="0,0,5,0"/>
                    <Entry x:Name="searchEntry"
                           Placeholder="Search items"
                           VerticalOptions="Center"
                           FontSize="14"
                           FontFamily="Inter-SemiBold"
                           Margin="0"
                           WidthRequest="300"
                           Text="{Binding SearchText, Mode=TwoWay}"
                           TextChanged="OnSearchTextChanged" />
                </HorizontalStackLayout>
            </Frame>

            <!-- Tabs -->
            <HorizontalStackLayout HorizontalOptions="Center" Spacing="40">
                <!-- All Listings Tab -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="All Listings"
                           FontSize="16"
                           FontFamily="Inter-SemiBold">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding IsAllListingsSelected}" Value="True">
                                <Setter Property="TextColor" Value="Black" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding IsAllListingsSelected}" Value="False">
                                <Setter Property="TextColor" Value="#999999" />
                            </DataTrigger>
                        </Label.Triggers>
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding AllListingsCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <BoxView HeightRequest="2" WidthRequest="80" HorizontalOptions="Center">
                        <BoxView.Triggers>
                            <DataTrigger TargetType="BoxView" Binding="{Binding IsAllListingsSelected}" Value="True">
                                <Setter Property="IsVisible" Value="True" />
                                <Setter Property="BackgroundColor" Value="{StaticResource DarkBlue}" />
                            </DataTrigger>
                            <DataTrigger TargetType="BoxView" Binding="{Binding IsAllListingsSelected}" Value="False">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </BoxView.Triggers>
                    </BoxView>
                </VerticalStackLayout>

                <!-- My Listings Tab -->
                <VerticalStackLayout HorizontalOptions="Center">
                    <Label Text="My Listings"
                           FontSize="16"
                           FontFamily="Inter-SemiBold">
                        <Label.Triggers>
                            <DataTrigger TargetType="Label" Binding="{Binding IsMyListingsSelected}" Value="True">
                                <Setter Property="TextColor" Value="Black" />
                            </DataTrigger>
                            <DataTrigger TargetType="Label" Binding="{Binding IsMyListingsSelected}" Value="False">
                                <Setter Property="TextColor" Value="#999999" />
                            </DataTrigger>
                        </Label.Triggers>
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding MyListingsCommand}" />
                        </Label.GestureRecognizers>
                    </Label>
                    <BoxView HeightRequest="2" WidthRequest="80" HorizontalOptions="Center">
                        <BoxView.Triggers>
                            <DataTrigger TargetType="BoxView" Binding="{Binding IsMyListingsSelected}" Value="True">
                                <Setter Property="IsVisible" Value="True" />
                                <Setter Property="BackgroundColor" Value="{StaticResource DarkBlue}" />
                            </DataTrigger>
                            <DataTrigger TargetType="BoxView" Binding="{Binding IsMyListingsSelected}" Value="False">
                                <Setter Property="IsVisible" Value="False" />
                            </DataTrigger>
                        </BoxView.Triggers>
                    </BoxView>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <!-- Radio Buttons -->
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="20">
                <RadioButton Content="All"
                             GroupName="PostFilter"
                             IsChecked="{Binding ShowAllItems}"
                             VerticalOptions="Center"
                             FontFamily="Inter-SemiBold"/>

                <RadioButton Content="Buyer Listings"
                             GroupName="PostFilter"
                             IsChecked="{Binding ShowOnlyBuyers}"
                             VerticalOptions="Center"
                             FontFamily="Inter-SemiBold"/>

                <RadioButton Content="Seller Listings"
                             GroupName="PostFilter"
                             IsChecked="{Binding ShowOnlySellers}"
                             VerticalOptions="Center"
                             FontFamily="Inter-SemiBold"/>
            </StackLayout>
        </StackLayout>

        <!-- Listings (Scrollable) -->
        <CollectionView Grid.Row="2"
                        x:Name="ListingsCollectionView"
                        ItemsSource="{Binding FilteredItems}"
                        SelectionMode="Single"
                        Margin="20,0,20,10">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="models:MarketplacePost">
                    <Frame BackgroundColor="White"
                           CornerRadius="10"
                           Padding="15"
                           HasShadow="True"
                           Margin="0,0,0,20">
                        <Frame.GestureRecognizers>
                            <TapGestureRecognizer Tapped="OnListingTapped" CommandParameter="{Binding .}" />
                        </Frame.GestureRecognizers>
                        <VerticalStackLayout Spacing="10">

                            <!-- Title -->
                            <Label Text="{Binding ListingTitle}"
                                   FontSize="18"
                                   FontFamily="Inter-Black"
                                   TextColor="Black"/>

                            <!-- Image -->
                            <Frame BackgroundColor="WhiteSmoke" Padding="0" IsClippedToBounds="True">
                                <Frame.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnListingTapped" CommandParameter="{Binding .}" />
                                </Frame.GestureRecognizers>
                                <Grid HeightRequest="200">
                                    <Image Source="{Binding ImagePath}"
                                           Aspect="AspectFit"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"/>
                                </Grid>
                            </Frame>

                            <!-- Tags -->
                            <HorizontalStackLayout Spacing="10">
                                <Frame BackgroundColor="#d1ecf1" Padding="5,2" CornerRadius="10">
                                    <Label Text="{Binding Category}" TextColor="#0c5460" FontSize="12" FontFamily="Inter-SemiBold"/>
                                </Frame>
                                <Frame BackgroundColor="#d4edda" Padding="5,2" CornerRadius="10">
                                    <Label Text="{Binding Condition}" TextColor="#155724" FontSize="12" FontFamily="Inter-SemiBold"/>
                                </Frame>
                                <Frame BackgroundColor="#ebedd4" Padding="5,2" CornerRadius="10">
                                    <Label Text="{Binding Location}" TextColor="#6d651b" FontSize="12" FontFamily="Inter-SemiBold"/>
                                </Frame>
                            </HorizontalStackLayout>

                            <!-- Price -->
                            <Label Text="{Binding Price, StringFormat='₱{0:F2}'}"
                                   FontSize="15"
                                   TextColor="Black"
                                   FontFamily="Inter-Black"/>

                            <!-- Delete Button (for My Listings only) -->
                            <Button Text="Delete"
                                    TextColor="White"
                                    BackgroundColor="{StaticResource Red}"
                                    CornerRadius="10"
                                    FontFamily="Inter-SemiBold"
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.DeleteCommand}"
                                    CommandParameter="{Binding .}"
                                    IsVisible="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.IsMyListingsSelected}" />

                        </VerticalStackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Post Button -->
        <Grid Grid.Row="3" BackgroundColor="{StaticResource White}" Padding="0" HeightRequest="100">
            <Button Text="Post an Item +"
                    BackgroundColor="{StaticResource Yellow}"
                    TextColor="#111111"
                    FontFamily="Inter-Black"
                    CornerRadius="25"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="16,10"
                    Clicked="OnPostListingClicked"/>
        </Grid>

        <!-- Bottom Navigation -->
        <Grid Grid.Row="4" BackgroundColor="{StaticResource DarkBlue}" HeightRequest="60">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ImageButton Source="nav_icon1.png" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="30" HeightRequest="30" Clicked="OnNavIconClicked"/>
            <ImageButton Source="nav_home.png" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="30" HeightRequest="30" Clicked="OnHomeButtonClicked"/>
            <ImageButton Source="nav_profile.png" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center" WidthRequest="30" HeightRequest="30" Clicked="OnAccountClicked"/>
        </Grid>
    </Grid>
</ContentPage>

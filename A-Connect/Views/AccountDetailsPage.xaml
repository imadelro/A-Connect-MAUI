<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A_Connect.Views.AccountDetailsPage"
             Title="Account Details"
             BackgroundColor="{StaticResource DarkBlue}">

    <VerticalStackLayout Padding="20"
                         Spacing="12"
                         VerticalOptions="CenterAndExpand"
                         HorizontalOptions="Center">
        
        <!-- Account Details Card -->
        <Frame BackgroundColor="White"
               CornerRadius="25"
               Padding="20"
               HasShadow="True"
               WidthRequest="350"
               HeightRequest="650"
               HorizontalOptions="Center">

            <Frame.Shadow>
                <Shadow Brush="Black" Opacity="0.14" Radius="8"/>
            </Frame.Shadow>

            <VerticalStackLayout Spacing="15">

                <Image Source="account_icon.png"
                        WidthRequest="120"
                        HeightRequest="120"
                        HorizontalOptions="Center"
                        VerticalOptions="Center"
                        Margin="0,0,0,20"/>
                
                <Label Text="Account Details"
                       FontFamily="Inter-Black"
                       FontSize="{OnIdiom Phone=28, Tablet=26, Desktop=28}"
                       HorizontalOptions="Center"
                       TextColor="#063970"/>

                <!-- Email -->
                <Label Text="Email"
                       FontSize="{OnIdiom Phone=14, Tablet=16, Desktop=18}"
                       FontFamily="Inter-Bold"/>
                <Label x:Name="emailLabel"
                       FontSize="{OnIdiom Phone=16, Tablet=18, Desktop=18}"
                       FontFamily="Inter-Regular"
                       TextColor="Black"/>

                <!-- ID Number -->
                <Label Text="ID Number"
                       FontSize="{OnIdiom Phone=14, Tablet=16, Desktop=18}"
                       FontFamily="Inter-Bold"/>
                <Label x:Name="idNumberLabel"
                       FontSize="{OnIdiom Phone=16, Tablet=18, Desktop=18}"
                       FontFamily="Inter-Regular"
                       TextColor="Black"/>

                <!-- Display Name -->
                <Label Text="Display Name"
                       FontSize="{OnIdiom Phone=14, Tablet=16, Desktop=18}"
                       FontFamily="Inter-Bold"/>
                <Entry x:Name="usernameEntry"
                       Placeholder="Enter display name"
                       FontSize="{OnIdiom Phone=14, Tablet=16, Desktop=18}"
                       FontFamily="Inter-Regular"/>

                <!-- Save Button -->
                <Button Text="Save"
                        WidthRequest="200"
                        CornerRadius="35"
                        BackgroundColor="#063970"
                        TextColor="White"
                        FontFamily="Inter-Bold"
                        FontSize="{OnIdiom Phone=16, Tablet=18, Desktop=20}"
                        HorizontalOptions="Center"
                        Clicked="OnSaveClicked"/>
            </VerticalStackLayout>
        </Frame>

    </VerticalStackLayout>
</ContentPage>

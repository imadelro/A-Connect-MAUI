<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A_Connect.Views.LoginPage"
             BackgroundColor="White"
             Title="Login">

    <VerticalStackLayout Padding="20" 
                         Spacing="12" 
                         VerticalOptions="CenterAndExpand"
                         HorizontalOptions="Center">

        <!-- Existing UI elements (Back Button, Title, etc.) -->

        <!-- Email Label -->
        <Label Text="ID Number"
               FontSize="{OnIdiom Phone=14, Tablet=16, Desktop=18}"
               FontFamily="Inter-Regular"/>

        <!-- Email Entry -->
        <Entry x:Name="emailIDnum"
               Placeholder="223144"
               Keyboard="Email"
               FontSize="{OnIdiom Phone=14, Tablet=16, Desktop=18}"/>

        <!-- Password Label -->
        <Label Text="Password"
               FontSize="{OnIdiom Phone=14, Tablet=16, Desktop=18}"
               FontFamily="Inter-Regular"/>

        <!-- Password Entry -->
        <Entry x:Name="passwordEntry"
               Placeholder="************"
               IsPassword="True"
               FontSize="{OnIdiom Phone=14, Tablet=16, Desktop=18}"/>

        <!-- Login Button -->
        <Button x:Name="btnLogin"
                Text="Login"
                WidthRequest="200"
                BackgroundColor="{StaticResource MidBlue}"
                Clicked="OnLoginClicked"
                FontFamily="Inter-Regular"
                FontSize="{OnIdiom Phone=16, Tablet=18, Desktop=20}"
                HorizontalOptions="Center"/>

        <!-- Register Button -->
        <Button x:Name="btnRegister"
                Text="Register"
                WidthRequest="200"
                BackgroundColor="{StaticResource MidBlue}"
                Clicked="OnRegisterClicked"
                FontFamily="Inter-Regular"
                FontSize="{OnIdiom Phone=16, Tablet=18, Desktop=20}"
                HorizontalOptions="Center"/>

    </VerticalStackLayout>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A_Connect.Views.TutorFinderPage"
             Title="Tutor Finder"
             BackgroundColor="White">

	<VerticalStackLayout Padding="20" Spacing="10">

		<Label Text="TUTOR FINDER"
               FontSize="24"
               HorizontalOptions="Center" />

		<!-- Search bar -->
		<SearchBar x:Name="searchBar"
                   Placeholder="Search course codes or category..."
                   TextChanged="OnSearchBarTextChanged" />

		<!-- Create Post button -->
		<Button Text="Create Post"
                Clicked="OnCreatePostClicked" />

		<!-- List of posts -->
		<CollectionView x:Name="postsCollectionView"
                        SelectionChanged="OnPostSelected">
			<CollectionView.ItemTemplate>
				<DataTemplate>
					<Frame BorderColor="Gray" Padding="10" Margin="5">
						<VerticalStackLayout Spacing="3">
							<!-- Course code and category in bold -->
							<Label Text="{Binding CourseCode}" FontAttributes="Bold" />
							<Label Text="{Binding Category}" FontAttributes="Bold" />

							<!-- Posterâ€™s name and contact -->
							<Label Text="{Binding PosterName}" />
							<Label Text="{Binding PosterContact}" />

							<!-- Additional info -->
							<Label Text="{Binding AdditionalInfo}" />
						</VerticalStackLayout>
					</Frame>
				</DataTemplate>
			</CollectionView.ItemTemplate>
		</CollectionView>
	</VerticalStackLayout>
</ContentPage>

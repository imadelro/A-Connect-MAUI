<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A_Connect.Views.StartPage"
             Background="{StaticResource MainGradient}"
             Padding="0,50,0,50"
             Title="A-Connect">

    <VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="10">
        
        <!-- Logo -->
        <Image Source="logo.png"
               WidthRequest="150"
               HeightRequest="108"
               Margin="0,0,0,10"/>

        <!-- A-Connect Title -->
        <Label Text="A-Connect"
               TextColor="{StaticResource LightGold}"
               FontSize="30"
               FontFamily="Inter-Black"
               HorizontalOptions="Center"/>

        <!-- Tagline -->
        <Label Text="Where Ateneans come to connect."
               FontFamily="montsemibolditalic"
               TextColor="White"
               FontSize="18"
               FontAttributes="Italic"
               HorizontalOptions="Center"
               Margin="0,0,0,40"/>

        <!-- Login Button -->
        <Button x:Name="btnLogin"
                Text="Login"
                WidthRequest="150"
                BackgroundColor="{StaticResource MidBlue}"
                FontFamily="Intern-Regular"
                Clicked="OnLoginClicked"/>

        <!-- Register Button -->
        <Button x:Name="btnRegister"
                Text="Register"
                WidthRequest="200"
                BackgroundColor="Black"
                FontFamily="Intern-Regular"
                Clicked="OnRegisterClicked"/>

    </VerticalStackLayout>

</ContentPage>

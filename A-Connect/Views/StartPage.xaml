<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A_Connect.Views.StartPage"
             Background="{StaticResource MainGradient}"
             Padding="0,50,0,50"
             Title="A-Connect">

<VerticalStackLayout HorizontalOptions="Center"
                         VerticalOptions="Center"
                         Spacing="10">

        <!-- Logo -->
        <Image Source="logo"
               WidthRequest="230"
               HeightRequest="230"
               Margin="0,-100,0,-20"/>

        <!-- A-Connect Title -->
        <Label Text="A-Connect"
               TextColor="{StaticResource Yellow}"
               FontSize="48"
               Margin="0,0,0,100"
               FontFamily="Inter-Black"
               HorizontalOptions="Center"/>

        <!-- Tagline -->
        <Label Text="Where Ateneans come to connect."
               FontFamily="Inter-MediumItalic"
               TextColor="White"
               FontSize="16"
               HorizontalOptions="Center"
               Margin="0,-100,0,100"/>

        <!-- Login Button -->
        <Button x:Name="btnLogin"
                Text="LOG IN"
                FontSize="20"
                WidthRequest="200"
                HeightRequest="50"
                BackgroundColor="{StaticResource DarkBlue}"
                FontFamily="Inter-Bold"
                CornerRadius="100"
                Clicked="OnLoginClicked"/>

        <!-- Register Button -->
        <Button x:Name="btnRegister"
                Text="REGISTER"
                FontSize="20"
                WidthRequest="200"
                HeightRequest="50"
                BackgroundColor="{StaticResource DarkBlue}"
                FontFamily="Inter-Bold"
                CornerRadius="100"
                Clicked="OnRegisterClicked"/>

    </VerticalStackLayout>

</ContentPage>

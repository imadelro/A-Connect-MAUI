<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A_Connect.Views.Homepage"
             Title="Homepage">
    
    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- CardView Equivalent -->
        <Frame Grid.Row="0"
               Padding="10"
               BackgroundColor="{StaticResource DarkBlue}"
               HorizontalOptions="Center"
               WidthRequest="417"
               HeightRequest="192"
               Margin="0,-50,0,0">
            <StackLayout>
                <Image Source="logo.png"
                       HeightRequest="120"
                       WidthRequest="120"
                       HorizontalOptions="Center"
                       Margin="0,50,0,0"/>

            </StackLayout>
        </Frame>

        <!-- Tools Section -->
        <HorizontalStackLayout Grid.Row="2"
                       Padding="50"
                       HorizontalOptions="Center">
            <VerticalStackLayout>
                <Frame BackgroundColor="{StaticResource MuteBlue}"
                       WidthRequest="150"
                       HeightRequest="150"
                       CornerRadius="15"
                       Margin="-10,0,70,0"
                       HasShadow="True">

                    <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Center">
                        <ImageButton Source="ptp_icon.png"
                             WidthRequest="90"
                             HeightRequest="90"
                             Margin="0,-5,0,0"/>

                        <Label Text="Profs to Pick"
                               FontSize="16"
                               FontFamily="Inter-Regular"
                               TextColor="White"
                               HorizontalOptions="Center"
                               Margin="0,-5,0,0"/>
                    </VerticalStackLayout>

                </Frame>
            </VerticalStackLayout>

            <VerticalStackLayout>
                <Frame BackgroundColor="{StaticResource MuteBlue}"
                       WidthRequest="150"
                       HeightRequest="150"
                       CornerRadius="15"
                       Margin="-40,0,0,0"
                       HasShadow="True">

                    <VerticalStackLayout HorizontalOptions="Center"
                                        VerticalOptions="Center">
                        <ImageButton Source="scheduletrading_icon.png"
                                     WidthRequest="80"
                                     HeightRequest="80"
                                     Margin="0,0,0,0"/>

                        <Label Text="Schedule Trading"
                               HeightRequest="50"
                               HorizontalTextAlignment="Center"
                               FontSize="15"
                               FontFamily="Inter-Regular"
                               TextColor="White"
                               HorizontalOptions="Center"
                               Margin="0,-10,0,0"/>  
                    </VerticalStackLayout>

                </Frame>
            </VerticalStackLayout>

        </HorizontalStackLayout>
        
        <!-- Bottom Navigation Bar -->
        <Grid Grid.Row="3" BackgroundColor="#ADD8E6">
            <ImageButton Source="homeicon.png"
                         WidthRequest="105"
                         HeightRequest="70"
                         HorizontalOptions="Center" />
        </Grid>
    </Grid>
</ContentPage>